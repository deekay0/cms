    <%= form_for(@bid, remote:true) do |f| %>

        <%= f.label :shares, 'How many shares would you like?' %>
        <%= f.text_field :shares %>

        <%= f.label :price, 'And what do you offer to pay for those?' %>
        <%= f.text_field :price %>
        <br>
        <%= f.submit "Bid", class: "btn btn-large btn-primary" %>
    <% end %>